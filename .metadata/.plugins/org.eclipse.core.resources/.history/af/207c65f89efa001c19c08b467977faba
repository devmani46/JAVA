package practice;

import java.util.Scanner;

public class jfo8 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter Your name: ");
		String name = sc.nextLine();
		
		System.out.print("Enter your contact number: ");
		String number = sc.nextLine();
		
		System.out.print("Enter parking number: ");
		int pNo = sc.nextInt();
		
		
		System.out.println("Which package do you want to choose: ");
		System.out.println("1. Full Day");
		System.out.println("2. One Night");
		System.out.println("3. Office Hours");
		System.out.println("4. Full Week");
		System.out.println("PLease select the number from 1-4");
		int n = sc.nextInt();
		
		boolean student;
		switch(n) {
		case 1: 
			if(student = true) {
				int fee = 200;
			}
			else {
				int fee = 400;
			}
		case 2: 
			if(student = true) {
				int fee = 400;
			}
			else {
				int fee = 500;
			}
		case 3: 
			if(student = true) {
				int fee = 100;
			}
			else {
				int fee = 200;
			}
		case 4: 
			if(student = true) {
				int fee = 1000;
			}
			else {
				int fee = 2000;
			}
		default:
			System.out.println("Invalid choice");
		}
		System.out.println("Are You student?(Y/N)");
		String s = sc.nextLine().toLowerCase();
		if(s.equals("y||yes")) {
			student = true;
		}
		else if(s.equals("n||no")) {
			student = false;
		}
		else {
			System.out.println("Plese enter y/yes or n/no");
			
		}
		
		System.out.println("Name :"+ name);
		System.out.println("Mobile number: "+ number);
		System.out.println("Parking ID: "+ pNo);
		System.out.println("Student(Y/N)"+s);
		if(student = true) {
			System.out.println("School name: IIMS College");
		}
		else {
			System.out.println();
		}
		
	}

}
     